        <Label x:Name="RatingLabel" Content="Rating" HorizontalAlignment="Left" Margin="2.667,201,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="56" Grid.Column="1"/>
        <Label x:Name="RatingValue" Content="0"  HorizontalAlignment="Left" Margin="0.667,201,0,0" VerticalAlignment="Top" Width="80" FontSize="16" Height="31" Grid.Column="2"/>
        <Label x:Name="YellowMarksLabel" Content="Yellow Marks" HorizontalAlignment="Left" Margin="2.667,232,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="103" Grid.Column="1"/>
        <Label x:Name="YellowMarksValue" Content="0" HorizontalAlignment="Left" Margin="0.667,232,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.19,0.423" FontSize="16" Height="31" Grid.Column="2"/>
        <Label x:Name="ScoreValue" Content="0" HorizontalAlignment="Left" Margin="0.667,170,0,0" VerticalAlignment="Top" Width="80" FontSize="16" Height="31" Grid.Column="2"/>
        <Label x:Name="ScoreLabel" Content="Score" HorizontalAlignment="Left" Margin="1.667,170,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="49" Grid.Column="1"/>
        <Label x:Name="StdDevCommitsLabel" Content="Std Dev Between Commits" HorizontalAlignment="Left" Margin="2.667,139,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="197" Grid.Column="1"/>
        <Label x:Name="StdDevCommitsValue" Content="0" HorizontalAlignment="Left" Margin="1.667,134,0,0" VerticalAlignment="Top" Width="49" FontSize="16" Grid.Column="2" Height="31"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="105.667,463,0,0" VerticalAlignment="Top" Width="75" Click="CloseButton_Click" Grid.Column="2" Height="20" Grid.ColumnSpan="2"/>
        <ListBox x:Name="ReasonsWhy" HorizontalAlignment="Left" Height="154" Margin="2.667,280,0,0" VerticalAlignment="Top" Width="419" FontSize="16" Grid.ColumnSpan="2" Grid.Column="1"/>

    </Grid>
</Window>
